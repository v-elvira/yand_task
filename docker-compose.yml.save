version: '3.8'

services:
  db:
    image: postgres
    volumes:
      - ./data/db:/var/lib/postgresql/data
    environment:
      - POSTGRES_DB=yand
      - POSTGRES_USER=postgres
      - POSTGRES_PASSWORD=pwd

  web:
    build: .
    command: gunicorn -w 4 -b 0.0.0.0:80 yand_rest.wsgi
    ports: 
      - 80:80
    depends_on:
      - dbversion: '3.8'

services:
   web:
     build: .
     command: gunicorn -w 4 -b 0.0.0.0:80 yand_rest.wsgi
     ports: 
        - 80:80
     extra_hosts:
        - "host.docker.internal:host-gateway"
